# ========================================
# Production Environment Variables
# ========================================

# ----------------------------------------
# Database
# ----------------------------------------
DATABASE_URL="postgresql://election_user:password@dpg-xxxxx.singapore-postgres.render.com/election_db"

# ----------------------------------------
# JWT Authentication
# ----------------------------------------
# Generate: openssl rand -base64 64
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# ----------------------------------------
# Ballot Security
# ----------------------------------------
# Generate: openssl rand -base64 64
BALLOT_SECRET_SALT="your-ballot-secret-salt-change-this"

# ----------------------------------------
# Server Configuration
# ----------------------------------------
NODE_ENV="production"
PORT=3000

# ----------------------------------------
# CORS Configuration
# ----------------------------------------
# Frontend URL (Vercel deployment)
CORS_ORIGIN="https://election-frontend.vercel.app"

# ----------------------------------------
# Optional: Email Service (for OTP)
# ----------------------------------------
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

